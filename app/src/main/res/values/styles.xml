<resources>

    <!-- Base application theme. -->
    <style name="Pomodoro" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Pomodoro.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="RuleTextView">
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">@dimen/list_item_left_padding</item>
        <item name="android:paddingRight">@dimen/list_item_left_padding</item>
        <item name="android:paddingStart">@dimen/list_item_left_padding</item>
        <item name="android:paddingEnd">@dimen/list_item_left_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RuleRadioButton">
        <item name="android:paddingLeft">@dimen/list_item_left_padding</item>
        <item name="android:paddingRight">@dimen/list_item_left_padding</item>
        <item name="android:paddingStart">@dimen/list_item_left_padding</item>
        <item name="android:paddingEnd">@dimen/list_item_left_padding</item>
    </style>

</resources>
